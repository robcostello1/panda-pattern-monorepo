{
  "compilerOptions": {
    "target": "ESNext",
    "lib": ["dom", "dom.iterable", "esnext"],
    "strict": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noImplicitAny": true,
    "skipLibCheck": true,
    "noEmit": true,
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "rootDir": ".",
    "baseUrl": ".",
    "jsx": "react-jsx"
  },
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
